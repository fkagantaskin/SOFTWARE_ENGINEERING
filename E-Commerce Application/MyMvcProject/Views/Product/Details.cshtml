@model MyMvcProject.Models.Product

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ürün Detay";
}

<div class="details-product-container">
    <h2 class="mb-4 text-center">Ürün Detayı</h2>

    <div class="card mb-4 shadow-sm">
        @if (!string.IsNullOrEmpty(Model.ImageFileName))
        {
            <img src="~/images/products/@Model.ImageFileName" class="card-img-top product-image" alt="@Model.Name">
        }
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Ürün ID</dt>
                <dd class="col-sm-9">@Model.ProductId</dd>

                <dt class="col-sm-3">Ürün Adı</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Fiyat</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Kategori</dt>
                <dd class="col-sm-9">
                    @(Model.Category != null 
                        ? Model.Category.Name 
                        : "Kategori Yok")
                </dd>
            </dl>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-controller="Product" asp-route-id="@Model.ProductId" class="btn btn-warning">
                    <i class="bi bi-pencil-fill me-2"></i> Düzenle
                </a>
                <a asp-action="Delete" asp-controller="Product" asp-route-id="@Model.ProductId" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-2"></i> Sil
                </a>
                <a asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left-circle-fill me-2"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
