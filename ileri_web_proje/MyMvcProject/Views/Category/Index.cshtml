@model IEnumerable<MyMvcProject.Models.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Kategoriler";
}

<div class="index-category-container">
    <h2>Kategori Listesi</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
    </p>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Kategori ID</th>
                <th>Kategori Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryId</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm me-2">Detay</a>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm me-2">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
