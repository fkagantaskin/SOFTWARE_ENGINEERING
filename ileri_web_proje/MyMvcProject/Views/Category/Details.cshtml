@model MyMvcProject.Models.Category

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Kategori Detayları";
}

<div class="details-category-container">
    <h2>Kategori Detayları</h2>

    <div class="category-details">
        <dl class="row">
            <dt class="col-sm-3">Kategori ID</dt>
            <dd class="col-sm-9">@Model.CategoryId</dd>

            <dt class="col-sm-3">Kategori Adı</dt>
            <dd class="col-sm-9">@Model.Name</dd>
        </dl>
    </div>

    <a asp-action="Index" class="btn btn-primary">Geri Dön</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
