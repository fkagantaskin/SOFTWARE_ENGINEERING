@model MyMvcProject.ViewModels.ContactViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "İletişim";
}


<div class="contact-container py-5">
    <div class="container">
        <h2 class="mb-5 text-center fw-bold text-primary">Bizimle İletişime Geçin</h2>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-4">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-success text-center">
                                <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.Message
                            </div>
                        }

                        <form asp-action="Contact" method="post" class="needs-validation" novalidate>
                            <div class="form-group mb-3">
                                <label asp-for="Name" class="form-label">Adınız</label>
                                <input asp-for="Name" class="form-control" placeholder="Adınızı girin" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label">E-posta</label>
                                <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Message" class="form-label">Mesajınız</label>
                                <textarea asp-for="Message" class="form-control" rows="5" placeholder="Mesajınızı yazın"></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-send-fill me-2"></i> Gönder
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5 text-center">
            <p class="fs-5 text-muted">
                Herhangi bir sorunuz veya öneriniz varsa, bize ulaşmaktan çekinmeyin.
            </p>
            <p class="fs-5">
                <i class="bi bi-envelope-fill me-2"></i> info@mywebsite.com
            </p>
            <p class="fs-5">
                <i class="bi bi-telephone-fill me-2"></i> +90 555 555 5555
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
